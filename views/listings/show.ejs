<% layout('/layouts/boilerplate') -%>

<!-- ðŸ”¹ Fullscreen Hero Section -->
<div class="show-hero">
    <img src="<%= listing.image.url %>" class="show-img" alt="Listing Image">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1><%= listing.title %></h1>
        <p class="location"><i class="fa-solid fa-map-marker-alt"></i> <%= listing.location %>, <%= listing.country %></p>
        <p class="price">&#x20B9; <%= listing.price.toLocaleString("en-IN")%></p>
    </div>
</div>

<!-- ðŸ”¹ Listing Details Section -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card listing-card">
                <div class="card-body">
                    <h4>Hosted by <i><%= listing.owner.username %></i></h4>
                    <p class="card-text"><%= listing.description %></p>
                    
                    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                    <div class="d-flex gap-2">
                        <a href="/listings/<%=listing._id%>/edit" class="btn btn-edit">Edit</a>
                        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                            <button class="btn btn-delete">Delete</button>
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- ðŸ”¹ Reviews Section -->
    <div class="reviews-section mt-5">
        <h3>Guest Reviews</h3>
        <hr>
        
        <% if(currUser) { %>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="review-form">
            <div class="mb-3">
                <label class="form-label">Rating</label>
                <fieldset class="starability-heart">
                    <input type="radio" id="rate1" name="review[rating]" value="1"><label for="rate1">1</label>
                    <input type="radio" id="rate2" name="review[rating]" value="2"><label for="rate2">2</label>
                    <input type="radio" id="rate3" name="review[rating]" value="3"><label for="rate3">3</label>
                    <input type="radio" id="rate4" name="review[rating]" value="4"><label for="rate4">4</label>
                    <input type="radio" id="rate5" name="review[rating]" value="5"><label for="rate5">5</label>
                </fieldset>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Comment</label>
                <textarea name="review[comment]" class="form-control" required></textarea>
            </div>
            
            <button class="btn btn-dark">Submit</button>
        </form>
        <% } %>

        <% if(listing.reviews.length > 0) { %>
        <div class="review-list mt-3">
            <% for(review of listing.reviews) { %>
            <div class="review-card">
                <h5>@<%= review.author.username %></h5>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <p><%= review.comment %></p>
                <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-delete btn-sm">Delete</button>
                </form>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>

    <!-- ðŸ”¹ Map Section -->
    <div class="map-section mt-5">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>
</div>

<script src="/js/map.js"></script>
